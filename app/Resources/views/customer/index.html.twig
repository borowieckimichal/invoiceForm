{% extends 'base.html.twig' %}

{% block body %}
    <div class="tab-content col-md-3">
        <h3 class="text-muted text-center">Lista kontrahentów</h3>
        {% if customers |length > 0 %}
            <div id="borderedTable" class="body collapse in">
                <table class="table table-bordered responsive-table">
                    <thead>
                        <tr>               
                            <th class="text-muted">Nazwa kontrahenta</th>
                            <th class="text-muted">NIP</th>
                            <th class="text-muted">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for customer in customers %}
                            <tr>               
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.nip }}</td>
                                <td>
                                    <ul class="list-inline">
                                        <li>
                                            <a class="btn btn-default btn-sm" href="{{ path('customer_show', { 'id': customer.id }) }}">pokaż</a>
                                        </li>
                                        <li>
                                            <a class="btn btn-default btn-sm" href="{{ path('customer_edit', { 'id': customer.id }) }}">edycja</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted text-center"> brak kontrahentów w bazie <p>   
            {% endif %}
            <a class="btn btn-default btn-sm" href="{{ path('customer_new') }}">Dodaj nowego kontrahenta do bazy klientów</a>


    
  
</div>
{% endblock %}

