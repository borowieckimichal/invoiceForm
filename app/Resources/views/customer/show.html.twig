{% extends 'base.html.twig' %}

{% block body %}
    <div class="tab-pane active col-md-3">
        <h3 class="text-muted text-center">Dane kontrahenta</h3>
        <div id="borderedTable" class="body collapse in">
            <table class="table table-bordered responsive-table">
                <tbody>
                    <tr>
                        <th class="text-muted">Name</th>
                        <td>{{ customer.name }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">NIP</th>
                        <td>{{ customer.nip }}</td>
                    </tr>
                </tbody>
            </table>
        </div>          
        <a class="btn btn-default btn-sm" href="{{ path('customer_index') }}">Powrót do listy kontrahentów</a>       
        <a class="btn btn-default btn-sm" href="{{ path('customer_edit', { 'id': customer.id }) }}">Edycja danych</a>    
        <hr>
        {{ form_start(delete_form) }}
        <input class="btn btn-danger btn-sm" type="submit" value="Usuń kontrahenta">
        {{ form_end(delete_form) }}   
    </div>
{% endblock %}
