{% extends 'base.html.twig' %}

{% block body %}
    <h1>Invoice</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ invoice.number }}</td>
            </tr>
            <tr>
                <th>Issuedate</th>
                <td>{% if invoice.issueDate %}{{ invoice.issueDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Saledate</th>
                <td>{% if invoice.saleDate %}{{ invoice.saleDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Duedate</th>
                <td>{% if invoice.dueDate %}{{ invoice.dueDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Paymentcondition</th>
                <td>{{ invoice.paymentCondition }}</td>
            </tr>
            <tr>
                <th>Iban</th>
                <td>{{ invoice.iban }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('invoice_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('invoice_edit', { 'id': invoice.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
